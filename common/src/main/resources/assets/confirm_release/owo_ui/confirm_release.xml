<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.21/owo-ui.xsd">
    <components>
        <flow-layout direction="vertical">
            <children>
                <flow-layout direction="vertical">
                    <children>
                        <label id="confirm-label">
                            <text>Are you sure you would like to release this Pok√©mon?</text>
                        </label>
                        <flow-layout direction="horizontal">
                            <children>
                                <button id="accept-button">
                                    <text translate="true">gui.proceed</text>
                                </button>
                                <button id="reject-button">
                                    <text translate="true">gui.cancel</text>
                                </button>
                            </children>

                            <horizontal-alignment>center</horizontal-alignment>
                            <vertical-alignment>center</vertical-alignment>
                            <gap>5</gap>
                            <padding>
                                <top>5</top>
                            </padding>
                        </flow-layout>
                    </children>

                    <padding>
                        <all>10</all>
                    </padding>

                    <surface>
                        <panel dark="true"/>
                    </surface>

                    <horizontal-alignment>center</horizontal-alignment>
                    <vertical-alignment>center</vertical-alignment>
                </flow-layout>
            </children>

            <vertical-alignment>center</vertical-alignment>
            <horizontal-alignment>center</horizontal-alignment>

            <surface>
                <vanilla-translucent/>
            </surface>
        </flow-layout>
    </components>
</owo-ui>